<%- include('../partials/header'); %>
    <%- include('../partials/top-header'); %>
        <%- include('./inc/sidebar'); %>

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h4 class="mb-sm-0">admin</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">account</a></li>
                                        <li class="breadcrumb-item active">deposit</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title mb-0 flex-grow-1">Deposits</h4>
                                </div><!-- end card header -->

                                <div class="card-body">
                                    <table id="myTable" class="display">
                                        <thead>
                                            <tr>
                                                <th>crypto</th>
                                                <th>Amount</th>
                                                <th>Network</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(typeof deposits !=='undefined' && deposits !=="" && typeof deposits==='object' ){ %>
                                                <% deposits.forEach((doc)=> { %>
                                                    <tr>
                                                        <td><%- (typeof doc.data().crypto_type !=='undefined' ) ? doc.data().crypto_type : '' ; %></td>
                                                        <td>$<%- (typeof doc.data().amount !=='undefined' ) ? doc.data().amount : '' ; %></td>
                                                        <td><%- (typeof doc.data().crypto_network !=='undefined' ) ? doc.data().crypto_network : '' ; %></td>
                                                        <td><span class="badge bg-primary"><%- (typeof doc.data().status !=='undefined' ) ? doc.data().status : '' ;
                                                                    %></span>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/deposits/<%- (typeof doc.data().depid !=='undefined' ) ? doc.data().depid : '' ; %>" class="btn btn-success btn-sm">Approve</a>
                                                            <a href="/admin/deposits/cancel/<%- (typeof doc.data().depid !=='undefined' ) ? doc.data().depid : '' ; %>" class="btn btn-danger btn-sm">Decline</a>
                                                            <a href="/admin/deposits/delete/<%- (typeof doc.data().depid !=='undefined' ) ? doc.data().depid : '' ; %>" class="btn btn-dark btn-sm">Delete</a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <h4>You have placed no trade yet !</h4>
                                                            <% } %>                                                    

                                        </tbody>
                                    </table>
                                </div><!-- end card-body -->
                            </div><!-- end card -->
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->



                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
            <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

            <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
            <%- include('../partials/footer'); %>
                <script>
                    $(document).ready(function () {
                        $('#myTable').DataTable();
                    });
                </script>