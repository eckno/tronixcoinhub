<%- include('../partials/header'); %>
<%- include('../partials/top-header'); %>
<%- include('../partials/sidebar'); %>


<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Account Withdrawal</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Account</a></li>
                            <li class="breadcrumb-item active">Withdraw</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-0">Withdrawal Request Placed</h5>
                                <% if(withd.status == 'paid'){ %>
                                    <span class="badge bg-success">Paid</span> 
                                <% } else if(withd.status == 'cancelled'){ %>
                                    <span class="badge bg-danger">Cancelled</span>
                                <% } else { %>
                                    <span class="badge bg-warning">Processing</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-card">
                            <table class="table table-borderless align-middle mb-0">
                                <thead class="table-light text-muted">
                                    <tr>
                                        <th style="width: 90px;" scope="col">Address:</th>
                                        <th colspan="2" scope="col"><%= withd.wallet_address %></th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            
                                        </td>
                                        <td>
                                            <h5 class="fs-14"><a href="#" class="text-body"> (Withdrawal)</a></h5>
                                            <p class="text-muted mb-0">$ <%= withd.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %> x 1</p>
                                        </td>
                                        <td class="text-end">$ <%= withd.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %></td>
                                    </tr>
                                   
                                   
                                    <tr>
                                        <td class="fw-semibold" colspan="2">Sub Total :</td>
                                        <td class="fw-semibold text-end">$ <%= withd.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">Crypto Coin <span class="text-muted">(<%= withd.crypto_network %>)</span> : </td>
                                        <td class="text-end">- <%= withd.crypto_type %></td>
                                    </tr>
                                    
                                    <tr>
                                        <td colspan="2">Estimated Tax (10%): </td>
                                        <td class="text-end">$ <%- tax; %>.00</td>
                                    </tr>
                                    <tr class="table-active">
                                        <th colspan="2">Total (USD) :</th>
                                        <td class="text-end">
                                            <span class="fw-semibold">
                                                $<%= withd.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
            <!--end col-->
        </div>
        <!--end row-->

    </div>
    <!-- container-fluid -->
</div><!-- End Page-content -->

<%- include('../partials/footer'); %>