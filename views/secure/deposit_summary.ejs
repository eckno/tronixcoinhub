<%- include('../partials/header'); %>
<%- include('../partials/top-header'); %>
<%- include('../partials/sidebar'); %>


<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Account Deposit</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Account</a></li>
                            <li class="breadcrumb-item active">Deposit</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-0">Deposit Summary</h5>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-card">
                            <table class="table table-borderless align-middle mb-0">
                                <thead class="table-light text-muted">
                                    <tr>
                                        <th style="width: 90px;" scope="col">Address:</th>
                                        <th colspan="2" scope="col"><%= address %></th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="avatar-md bg-light rounded p-1">
                                                <img src="assets/images/products/img-8.png" alt="" class="img-fluid d-block">
                                            </div>
                                        </td>
                                        <td>
                                            <h5 class="fs-14"><a href="apps-ecommerce-product-details.html" class="text-body"><%= deposit.note %> (Deposit)</a></h5>
                                            <p class="text-muted mb-0">$ <%= deposit.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %> x 1</p>
                                        </td>
                                        <td class="text-end">$ <%= deposit.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %></td>
                                    </tr>
                                   
                                   
                                    <tr>
                                        <td class="fw-semibold" colspan="2">Sub Total :</td>
                                        <td class="fw-semibold text-end">$ <%= deposit.amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">Discount <span class="text-muted">(0)</span> : </td>
                                        <td class="text-end">- $ 00.00</td>
                                    </tr>
                                    
                                    <tr>
                                        <td colspan="2">Estimated Tax (10%): </td>
                                        <td class="text-end">$ <%- tax; %>.00</td>
                                    </tr>
                                    <tr class="table-active">
                                        <th colspan="2">Total (USD) :</th>
                                        <td class="text-end">
                                            <span class="fw-semibold">
                                                <% var amount = parseInt(deposit.amount) + parseInt(tax); %>
                                                <%= amount.toLocaleString('en-US', {style: 'currency', currency: 'USD'}); %>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="container mx-auto mt-2 mb-2">
                                <div class="row mx-auto">
                                    <div class="col-md-8">
                                        <label for="">Address:</label>
                                        <input type="text" name="" value="<%= address %>" id="wllet" class="form-control" readonly>
                                    </div>
                                    <div class="col-md-2 mt-4">
                                        <button id="copywllet" class="btn btn-primary">copy</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
            <!--end col-->
        </div>
        <!--end row-->

    </div>
    <!-- container-fluid -->
</div><!-- End Page-content -->

<%- include('../partials/footer'); %>